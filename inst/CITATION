citHeader("To cite learnitdown in publications, please use:")

citEntry(entry="Manual",
  title = "learnitdown",
  author = personList(as.person("Philippe Grosjean")),
  organization = "UMONS",
  address      = "MONS, Belgium",
  year         = version$year,
  url          = "https://www.sciviews.org/learnitdown/",

  textVersion =
    paste("Grosjean, Ph. (", version$year, "). ",
      "learnitdown. ",
      "UMONS, Mons, Belgium. ",
      "URL https://www.sciviews.org/learnitdown/.",
      sep = "")
)

citFooter("We have invested a lot of time and effort in creating learnitdown,",
  "please cite it when using it together with R.",
  "See also", sQuote("citation()"),
  "for citing R.")
